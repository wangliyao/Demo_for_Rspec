<div class="form-horizontal col-sm-offset-3 col-md-offset-3" id="login_form">
  <h3 class="form-title">修改密码</h3>
  <div class="form row">
    <div>
      <%= form_tag("/users/change", method: "get") do %>
          <div class="col-sm-9 col-md-9">
            <div class="form-group">
              <i class="fa fa-user fa-lg"></i>
              <%= password_field_tag :old_password, [], {:placeholder => "旧密码", :class => 'form-control '} %>
            </div>

            <div class="form-group">
              <i class="fa fa-lock fa-lg"></i>
              <%= password_field_tag :password, [], {:placeholder => "新密码", :class => 'form-control '} %>
            </div>
            <div class="form-group">
              <input type="submit" value="提交" class="btn btn-success pull-right">
              <%= link_to "返回", {:controller => 'home', :action => 'index'}, {:class => "btn btn-info pull-left"} %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
