<%= form_tag("/sessions/create", method: "post") do %>
    <div class="col-sm-9 col-md-9">
      <div class="form-group">
        <i class="fa fa-user fa-lg"></i>
        <%= text_field_tag :name, [], {:placeholder => "用户名", :class => 'form-control'} %>
      </div>
      <div class="form-group">
        <i class="fa fa-lock fa-lg"></i>
        <%= password_field_tag :password, [], {:placeholder => "密码", :class => 'form-control '} %>
      </div>
      <div class="form-group">
        <input type="submit" value="登录" class="btn btn-success pull-right">
      </div>
    </div>
<% end %>
